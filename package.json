{
  "name": "frontend",
  "author": "Patrick Davey <patrick.davey@gmail.com>",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "build-assets": "cp -r web/static/assets/* priv/static",
    "watch-assets": "watch-run -p 'web/static/assets/**/*' npm run build-assets",
    "build-scss": "node-sass --include-path web/static/scss web/static/scss/main.scss priv/static/css/main.css",
    "watch-js": "watchify -vd -p browserify-hmr -e web/static/js/app.js -o priv/static/js/app.js",
    "watch-css": "node-sass -r -w --include-path web/static/scss web/static/scss/main.scss priv/static/css/main.css",
    "watch": "npm run watch-assets & npm run watch-js & npm run watch-css",
    "build": "cross-env NODE_ENV=production browserify -g envify -p [ vueify/plugins/extract-css -o priv/static/css/main.css ] -e web/static/js/app.js | uglifyjs -c warnings=false -m > priv/static/js/app.js",
    "test": "karma start karma.conf.js"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.7",
    "file-loader": "^0.9.0",
    "phoenix": "^1.2.1",
    "url-loader": "^0.5.7",
    "vue": "^2.0",
    "vue-resource": "~> 1.1",
    "vue-strap": "wffranco/vue-strap",
    "vue-toast": "^3.0"
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^13.1.0",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^2.0.0",
    "node-sass": "^4.0",
    "envify": "^3.4.1",
    "eslint": "^3.3.0",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-html": "^1.5.2",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "karma": "^1.2.0",
    "karma-browserify": "^5.1.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-spec-reporter": "0.0.26",
    "npm-run-all": "^2.3.0",
    "phantomjs-prebuilt": "^2.1.3",
    "proxyquireify": "^3.0.1",
    "uglify-js": "^2.5.0",
    "vueify": "^9.0.0",
    "watch-run": "^1.2.2",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  }
}
